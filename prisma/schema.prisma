generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Donor {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  phone     String
  ngoId     Int
  amount    Float
  treeCount Int
  createdAt DateTime @default(now())
  NGO       NGO      @relation(fields: [ngoId], references: [id])
}

model NGO {
  id       Int      @id @default(autoincrement())
  name     String
  logoUrl  String
  iban     String
  donors   Donor[]
}
